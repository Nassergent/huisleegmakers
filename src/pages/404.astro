---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Pagina niet gevonden - Huisleegmakers"
  description="De pagina die u zoekt bestaat niet of is verplaatst."
  noindex={true}
>
  <Header />
  <main id="main" class="pt-24 pb-20">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center py-20">
      <p class="text-8xl font-extrabold text-brand-600 mb-4">404</p>
      <h1 class="text-2xl md:text-3xl font-extrabold text-slate-900 mb-4 tracking-tight">Pagina niet gevonden</h1>
      <p class="text-slate-500 mb-8">De pagina die u zoekt bestaat niet of is verplaatst.</p>
      <a href="/" class="inline-flex items-center gap-2 bg-brand-600 hover:bg-brand-700 text-white font-bold px-6 py-3 rounded-full transition-all duration-300 hover:shadow-lg hover:shadow-brand-600/25">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
        Terug naar homepage
      </a>
    </div>
  </main>
  <Footer />
</Layout>
