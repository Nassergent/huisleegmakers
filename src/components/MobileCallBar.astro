---
// Sticky call-to-action bar voor mobiel - verschijnt na scrollen
---

<div id="mobile-cta-bar" class="fixed bottom-0 left-0 right-0 z-40 lg:hidden translate-y-full transition-transform duration-300">
  <div class="bg-white border-t border-gray-200 shadow-[0_-4px_12px_rgba(0,0,0,0.08)] px-4 py-2.5 flex items-center gap-2.5">
    <a href="tel:+32478225633" class="flex-1 inline-flex items-center justify-center bg-brand-600 text-white font-semibold text-sm py-2.5 rounded-lg gap-2">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
      Bel nu
    </a>
    <a href="#contact" class="flex-1 inline-flex items-center justify-center bg-white text-brand-600 font-semibold text-sm py-2.5 rounded-lg border border-brand-200 gap-2">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
      Gratis offerte
    </a>
  </div>
</div>

<script>
  const bar = document.getElementById('mobile-cta-bar');
  let lastScroll = 0;
  window.addEventListener('scroll', () => {
    const y = window.scrollY;
    if (y > 400) {
      bar?.classList.remove('translate-y-full');
      bar?.classList.add('translate-y-0');
    } else {
      bar?.classList.add('translate-y-full');
      bar?.classList.remove('translate-y-0');
    }
    lastScroll = y;
  });
</script>
