  {
    titel: 'Sociale Instellingen',
    beschrijving: 'Rusthuizen, zorgcentra en dienstencentra. Discrete en respectvolle service.',
    iconBg: 'bg-rose-50', iconColor: 'text-rose-600',
    icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>'
  },
  {
    titel: 'Overheidsinstellingen',
    beschrijving: 'OCMW, sociale diensten en overheidspartners. Correcte administratie en rapportage.',
    iconBg: 'bg-violet-50', iconColor: 'text-violet-600',
    icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"></path></svg>'
